<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowContentTransitions" tools:targetApi="21">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="DialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextAppearance.CollapsingToolbar" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- cards -->
    <style name="FeedCard" parent="CardView">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="EventOrganizationCard" parent="FeedCard">
        <item name="android:layout_marginLeft">@dimen/organization_card_side_margin</item>
        <item name="android:layout_marginRight">@dimen/organization_card_side_margin</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:stateListAnimator" tools:targetApi="21">@anim/card_raise</item>
    </style>

    <style name="EventCard" parent="FeedCard">
        <item name="android:layout_margin">4dp</item>
        <item name="android:stateListAnimator" tools:targetApi="21">@anim/card_raise</item>
    </style>

    <style name="ActionCard" parent="FeedCard">
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="OrganizationDescriptionCard" parent="FeedCard">
        <item name="android:clickable">false</item>
    </style>

    <style name="DescriptionCard" parent="CardView">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="EventDescriptionCard" parent="DescriptionCard">
        <item name="android:clickable">false</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <!-- flat items -->
    <style name="FlatItem">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="UserItem" parent="FlatItem"/>
    <style name="OrganizationItem" parent="FlatItem"/>

    <style name="EventCardWithGroupDate">
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <!-- text styles -->
    <style name="Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline.Light">
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="Headline.Dark">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Title.Light">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Body1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body1.Light">
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="Body2.Light">
        <item name="android:textColor">#8b000000</item>
    </style>

    <style name="Subhead.Light" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8A000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Caption.Light" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ff5f9e</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
