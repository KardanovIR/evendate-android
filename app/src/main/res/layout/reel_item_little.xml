<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/EventCard">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:id="@+id/event_item_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="event_image"
        android:scaleType="centerCrop"
        android:padding="6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_item_title"
        android:text="Title"
        android:textColor="#FF000000"
        android:textSize="12sp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/event_item_image"
        android:layout_toEndOf="@+id/event_item_image"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 month 10:00 - 16:00"
        android:id="@+id/event_item_date"
        android:layout_below="@+id/event_item_title"
        android:layout_toRightOf="@+id/event_item_image"
        android:layout_toEndOf="@+id/event_item_image"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:textSize="11sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizator"
        android:id="@+id/event_item_organization"
        android:textSize="11sp"
        android:layout_alignTop="@+id/event_item_date"
        android:layout_toRightOf="@+id/event_item_date"
        android:layout_toEndOf="@+id/event_item_date" />

    <View
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:id="@+id/event_item_favorite_indicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:background="@color/accent" />
</RelativeLayout>