<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="?attr/colorPrimary"
             android:gravity="center_vertical|center_horizontal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="52dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Добро пожаловать в Evendate!"
                android:textColor="#FF4A4A4A"
                android:textSize="21sp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Evendate – это сервис, позволяющий вам оставаться в курсе предстоящий событий в ваших любимых местах."
                android:textColor="#FF4A4A4A"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Войдите через социальную сеть:"
                android:fontFamily="sans-serif"
                android:textColor="#8B000000"
                android:textSize="13sp"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFD7D7D7"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:id="@+id/view"
                android:layout_marginBottom="16dp"
                />

            <FrameLayout
                android:id="@+id/sing_in_vk_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/auth_vk_button"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/vk_icon"
                        />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Войти через ВКонтакте"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/sing_in_fb_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/auth_fb_button"
                android:layout_below="@+id/sing_in_google_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:padding="14dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fb_icon"
                        />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Войти через Facebook"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/sing_in_google_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/sing_in_vk_button"
                android:background="@drawable/auth_google_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingRight="10dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g_plus_icon"
                        />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Войти через Google+"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>
            </FrameLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>