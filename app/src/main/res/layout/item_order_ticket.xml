<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ticket_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Эконом"/>

    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ticket_total_sum"
        android:layout_alignBottom="@+id/ticket_total_sum"
        android:layout_alignLeft="@+id/ticket_type"
        android:layout_alignStart="@+id/ticket_type"
        android:textAppearance="@style/Caption.Light"
        tools:text="1 000 ₽"/>

    <com.travijuu.numberpicker.library.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:focusable="false"
        app:max="10"
        app:min="0"
        app:unit="1"
        app:value="0"/>

    <TextView
        android:id="@+id/ticket_total_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Body1"
        android:visibility="invisible"
        tools:text="10 000 ₽"
        tools:visibility="visible"
        android:layout_below="@+id/number_picker"
        android:layout_alignLeft="@+id/number_picker"
        android:layout_alignStart="@+id/number_picker"/>
</RelativeLayout>