<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/cardView"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/event_item_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="event_image"
            android:scaleType="centerCrop" />

        <TextView
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_item_title"
            android:text="Title"
            android:textColor="#FF000000"
            android:textSize="12sp"
            android:textIsSelectable="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/event_item_image"
            android:layout_toEndOf="@+id/event_item_image"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 month 10:00 - 16:00"
            android:id="@+id/event_item_date"
            android:layout_below="@+id/event_item_title"
            android:layout_toRightOf="@+id/event_item_image"
            android:layout_toEndOf="@+id/event_item_image"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizator"
            android:id="@+id/event_item_organization"
            android:layout_below="@+id/event_item_date"
            android:layout_toRightOf="@+id/event_item_image"
            android:layout_toEndOf="@+id/event_item_image"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="11sp" />

        <View
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:id="@+id/event_item_favorite_indicator"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:background="@color/accent_color" />
    </RelativeLayout>
</android.support.v7.widget.CardView>