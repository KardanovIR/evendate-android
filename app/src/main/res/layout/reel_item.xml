<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/EventCardWithGroupDate">
    <TextView
        android:id="@+id/event_day_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 ноября"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:visibility="gone"/>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cardView"
        style="@style/EventCard"
        android:layout_below="@+id/event_day_group"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        android:stateListAnimator="@anim/card_raise">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/event_item_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="event_image"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_item_title"
                android:text="Title"
                android:textColor="#FF000000"
                android:textSize="14sp"
                android:textIsSelectable="false"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/event_item_image"
                android:layout_toEndOf="@+id/event_item_image"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 month 10:00 - 16:00"
                android:id="@+id/event_item_date"
                android:layout_below="@+id/event_item_title"
                android:layout_toRightOf="@+id/event_item_image"
                android:layout_toEndOf="@+id/event_item_image"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="4dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizator"
                android:id="@+id/event_item_organization"
                android:layout_below="@+id/event_item_date"
                android:layout_toRightOf="@+id/event_item_image"
                android:layout_toEndOf="@+id/event_item_image"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="12sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:id="@+id/event_item_favorite_indicator"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"
                android:background="@color/accent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>