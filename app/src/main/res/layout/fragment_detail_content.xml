<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_detail"
    android:fitsSystemWindows="true">
    <!--<android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true">-->
        <LinearLayout
            android:id="@+id/strip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="?attr/colorPrimary"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true">
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/event_participant_count"
                    android:text="-" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/event_participants"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/event_day"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:text="-" />
                    <TextView
                        android:id="@+id/event_month"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/event_time"
                        android:text="-" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center" />
                </LinearLayout>
        </LinearLayout>
    <!--</android.support.v7.widget.Toolbar>-->


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@id/strip"
        android:clipToPadding="false"
        >

        <RelativeLayout
            android:id="@+id/event_description_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="40dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_color_black"
                android:id="@+id/event_organization"
                android:layout_below="@+id/event_organization_header"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/event_organization"
                android:id="@+id/event_organization_header"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/event_description"
                android:id="@+id/event_description_header"
                android:layout_below="@+id/event_organization"
                android:layout_alignLeft="@+id/event_organization"
                android:layout_alignStart="@+id/event_organization"
                android:layout_marginBottom="8dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_color_black"
                android:id="@+id/event_description"
                android:layout_below="@+id/event_description_header"
                android:layout_alignLeft="@+id/event_description_header"
                android:layout_alignStart="@+id/event_description_header"
                android:layout_marginBottom="16dp"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_below="@+id/event_description"
                android:id="@+id/separator_1" />

            <FrameLayout
                android:id="@+id/event_place_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_1"
                android:layout_alignLeft="@+id/event_description"
                android:layout_alignStart="@+id/event_description"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/event_place_icon"
                    android:padding="10dp"
                    android:src="@drawable/place"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_place"
                    android:id="@+id/event_place_header"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medium Text"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/event_place"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="14sp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_below="@+id/event_place_content"
                android:id="@+id/separator_2" />

            <FrameLayout
                android:id="@+id/event_tags_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_2"
                android:layout_alignLeft="@+id/event_description"
                android:layout_alignStart="@+id/event_description"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/event_tag_icon"
                    android:padding="10dp"
                    android:src="@drawable/clock"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_tags"
                    android:id="@+id/event_tags_header"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medium Text"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/event_tags"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="14sp" />
            </FrameLayout>
            <View
                android:id="@+id/separator_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_below="@+id/event_tags_content" />

            <FrameLayout
                android:id="@+id/event_link_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_3"
                android:layout_alignLeft="@+id/event_description"
                android:layout_alignStart="@+id/event_description"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/event_link_icon"
                    android:padding="10dp"
                    android:src="@mipmap/ic_open_in_new_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_link"
                    android:id="@+id/event_link_header"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medium Text"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/event_link"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="14sp" />
            </FrameLayout>

    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>