<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_detail"
    android:fitsSystemWindows="true">
    <!--<android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true">-->
        <LinearLayout
            android:id="@+id/strip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="?attr/colorPrimary"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/event_participant_count"
                    tools:text="1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/event_participants"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/event_day"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:gravity="center"
                        tools:text="1" />
                    <TextView
                        android:id="@+id/event_month"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:gravity="center"
                        tools:text="month" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/event_time"
                        tools:text="1" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center" />
                </LinearLayout>
        </LinearLayout>
    <!--</android.support.v7.widget.Toolbar>-->

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@id/strip"
        android:clipToPadding="false"
        >

        <RelativeLayout
            android:id="@+id/event_description_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="40dp"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/event_organization"
                android:id="@+id/event_organization_header"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_color_black"
                android:id="@+id/event_organization"
                android:layout_below="@+id/event_organization_header"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                tools:text="Dream Academy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/event_description"
                android:id="@+id/event_description_header"
                android:layout_below="@+id/event_organization"
                android:layout_alignLeft="@+id/event_organization"
                android:layout_alignStart="@+id/event_organization"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_color_black"
                android:id="@+id/event_description"
                android:layout_below="@+id/event_description_header"
                android:layout_alignLeft="@+id/event_description_header"
                android:layout_alignStart="@+id/event_description_header"
                android:layout_marginBottom="12dp"
                android:textSize="16sp"
                tools:text="Для Топ-менеджеров крупных предприятий, собственников бизнеса и всех…"/>
            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_below="@+id/event_description"
                android:id="@+id/separator_0" />

            <FrameLayout
                android:id="@+id/event_date_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_0"
                android:layout_alignLeft="@+id/event_description"
                android:layout_alignStart="@+id/event_description"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/event_date_icon"
                    android:padding="8dp"
                    android:src="@drawable/place"
                    android:alpha="0.54" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_date"
                    android:id="@+id/event_date_header"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    tools:text="date"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/event_date"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="12sp"
                    android:maxHeight="30dp"
                    android:ellipsize="end"/>
            </FrameLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_below="@+id/event_date_content"
                android:id="@+id/separator_1" />

            <FrameLayout
                android:id="@+id/event_place_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_1"
                android:layout_alignLeft="@+id/separator_1"
                android:layout_alignStart="@+id/separator_1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/event_place_icon"
                    android:padding="8dp"
                    android:src="@drawable/place"
                    android:alpha="0.54" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_place"
                    android:id="@+id/event_place_header"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    tools:text="Place"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/event_place"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="12sp"
                    android:maxHeight="30dp"
                    android:ellipsize="end"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_below="@+id/event_place_content"
                android:id="@+id/separator_2" />

            <FrameLayout
                android:id="@+id/event_tags_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_2"
                android:layout_alignLeft="@+id/event_description"
                android:layout_alignStart="@+id/event_description"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/event_tag_icon"
                    android:padding="8dp"
                    android:src="@mipmap/ic_local_offer_black"
                    android:alpha="0.54" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_tags"
                    android:id="@+id/event_tags_header"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    tools:text="Medium Text"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/event_tags"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="12sp"
                    android:maxHeight="30dp"
                    android:ellipsize="end"/>
            </FrameLayout>
            <View
                android:id="@+id/separator_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_below="@+id/event_tags_content" />

            <FrameLayout
                android:id="@+id/event_link_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_3"
                android:layout_alignLeft="@+id/event_description"
                android:layout_alignStart="@+id/event_description"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/event_link_icon"
                    android:padding="8dp"
                    android:src="@mipmap/ic_open_in_new_black"
                    android:alpha="0.54" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_link"
                    android:id="@+id/event_link_header"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    tools:text="MOAR"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/event_link"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:textSize="12sp"
                    android:maxHeight="30dp"
                    android:ellipsize="end"/>
            </FrameLayout>

            <View
                android:id="@+id/separator_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_above="@+id/event_link_content" />
    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
    <!-- background strip for cross-fading -->
    <View
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?attr/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <!-- loader view for strip -->
    <View
        android:id="@+id/strip_cover"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:visibility="gone"/>
    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@id/strip"
        tools:visibility="gone"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_below="@id/strip"
        android:layout_centerHorizontal="true" />
</RelativeLayout>