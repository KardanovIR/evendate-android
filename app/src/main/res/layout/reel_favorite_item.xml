<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:id="@+id/cardView"
    style="@style/EventCard"
    android:stateListAnimator="@anim/card_raise">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:id="@+id/event_item_image"
            android:contentDescription="event_image"
            android:scaleType="centerCrop" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:layout_alignBottom="@+id/event_item_image" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_item_title"
            android:text="Title"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:gravity="left|bottom"
            android:layout_alignBottom="@+id/event_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="14dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/event_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/frameLayout">

            <FrameLayout
                android:id="@+id/event_item_date_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginRight="156dp"
                android:layout_marginEnd="150dp"
                >
                <TextView
                    android:id="@+id/event_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10 month 10:00 - 16:00"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:focusable="false" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Organizator"
                android:id="@+id/event_item_organization"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="end"
                android:maxWidth="150dp"
                android:ellipsize="end"
                android:lines="1"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>