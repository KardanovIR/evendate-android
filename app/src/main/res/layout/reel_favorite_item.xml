<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:id="@+id/cardView"
    style="@style/EventCard"
    android:stateListAnimator="@anim/card_raise">>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:id="@+id/event_item_image"
            android:contentDescription="event_image"
            android:scaleType="centerCrop" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:layout_alignBottom="@+id/event_item_image" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_item_title"
            android:text="Title"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:gravity="left|bottom"
            android:layout_alignBottom="@+id/event_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="14dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/event_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/frameLayout">

            <TextView
                android:id="@+id/event_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 month 10:00 - 16:00"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizator"
                android:id="@+id/event_item_organization"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/event_item_date"
                android:layout_toRightOf="@+id/event_item_date"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>