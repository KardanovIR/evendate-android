<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/EventCardWithGroupDate">
    <TextView
        android:id="@+id/event_day_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 ноября"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:visibility="gone" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:id="@+id/cardView"
        style="@style/EventCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_day_group">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:id="@+id/event_item_image"
                android:contentDescription="event_image"
                android:scaleType="centerCrop" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient"
                android:layout_above="@+id/event_item_date" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_item_title"
                android:text="Title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:layout_above="@+id/event_item_date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:gravity="left|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 month 10:00 - 16:00"
                android:id="@+id/event_item_date"
                android:textSize="14sp"
                android:layout_below="@+id/event_item_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizator"
                android:id="@+id/event_item_organization"
                android:textSize="14sp"
                android:layout_below="@+id/event_item_image"
                android:layout_toRightOf="@+id/event_item_date"
                android:layout_toEndOf="@+id/event_item_date"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:id="@+id/event_item_favorite_indicator"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:background="?attr/colorAccent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>