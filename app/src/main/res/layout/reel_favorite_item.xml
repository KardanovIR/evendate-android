<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:id="@+id/cardView"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:id="@+id/event_item_image"
            android:contentDescription="event_image"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:layout_above="@+id/event_item_date" />
        <TextView
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_item_title"
            android:text="Title"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:textIsSelectable="false"
            android:layout_above="@+id/event_item_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 month 10:00 - 16:00"
            android:id="@+id/event_item_date"
            android:textSize="11sp"
            android:layout_below="@+id/event_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizator"
            android:id="@+id/event_item_organization"
            android:textSize="11sp"
            android:layout_below="@+id/event_item_image"
            android:layout_toRightOf="@+id/event_item_date"
            android:layout_toEndOf="@+id/event_item_date"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:id="@+id/event_item_favorite_indicator"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:background="?attr/colorAccent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>