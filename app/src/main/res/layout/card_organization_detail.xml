<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="4dp">
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/organization_logo_frame">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:civ_border_width="0dp"
                android:src="#FFFFFF"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:id="@+id/organization_icon"
                tools:src="@drawable/evendate_logo" />
        </FrameLayout>
        <TextView
            android:id="@+id/organization_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Институт STRELKA"
            android:textSize="24sp"
            android:layout_below="@+id/organization_logo_frame"
            android:layout_centerHorizontal="true"
            android:textIsSelectable="false"
            android:textColor="#de000000"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/organization_subscribe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ПОДПИСАТЬСЯ"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/organization_name"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:background="#1a999999"
            android:textColor="#ff5f9e"
            android:layout_marginTop="16dp" />
        <RelativeLayout
            android:id="@+id/organization_users_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/organization_subscribe_button"
            android:layout_margin="24dp">
            <ru.evendate.android.views.UsersView
                android:id="@+id/organization_users"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                tools:background="#aaaa00"
                app:usersLimit="4"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="ВСЕ ПОДПИСЧИКИ"/>
                <TextView
                    android:id="@+id/organization_users_description"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="72 и 14 друзей"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/organization_more_button"
            android:orientation="horizontal"
            android:layout_below="@+id/organization_users_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПОДРОБНЕЕ"
                android:layout_gravity="center_vertical" />
            <ToggleButton
                android:id="@+id/organization_toggle_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/toggle_organization_detail"
                android:textOff="@null"
                android:textOn="@null"/>
        </LinearLayout>
        <View
            android:id="@+id/organization_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d7d7d7"
            android:layout_below="@+id/organization_more_button"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/organization_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/organization_divider"
            android:text="Описание"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/organization_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/organization_description_label"
            tools:text="Центр Digital October — это место встречи глобально мыслящих профессионалов технологического сообщества"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/organization_place_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/organization_description"
            android:text="Адрес организатора"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/organization_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/organization_place_label"
            tools:text="Берсеневская набережная, 6, стр.3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/organization_link_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/organization_place"
            android:text="Страница организатора"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:id="@+id/organization_link_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/organization_link_label"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_open_in_new_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПЕРЕЙТИ К СТРАНИЦЕ"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>