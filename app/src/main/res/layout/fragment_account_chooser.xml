<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:padding="16dp"
    android:background="?attr/colorPrimary"
    >

    <Button
        android:id="@+id/sing_in_vk_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="@string/sing_in_vk"
        android:textColor="@color/vk_color"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/sing_in_fb_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="@string/sing_in_fb"
        android:textColor="@color/fb_color"
        android:layout_below="@id/sing_in_vk_button"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="4dp" />


    <Button
        android:id="@+id/sing_in_google_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="@string/sing_in_google"
        android:textColor="@color/gplus_color"
        android:layout_below="@+id/sing_in_fb_button"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/evendate_logo"
        android:elevation="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sing_in_description"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_above="@+id/sing_in_vk_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"
        android:textAlignment="center" />

</RelativeLayout>