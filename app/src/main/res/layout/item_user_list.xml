<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="72dp"
    android:layout_width="match_parent"
    style="@style/UserItem">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:id="@+id/user_item_image"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="user_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/butterfly"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_item_name"
        tools:text="Samen Persunov"
        android:textColor="#FF000000"
        android:textSize="18sp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/user_item_image"
        android:layout_toEndOf="@+id/user_item_image"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true" />
</RelativeLayout>